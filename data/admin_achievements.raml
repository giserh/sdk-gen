    application/json: 
      schema: !include schemas/achievement_schema.json
get:
  is: [fields, ordering, segments, groups, paginator]
  description: Get a list of achievements.
  responses:
      200:
        body: 
          schema: !include schemas/achievements_list.json  
/{achievementId}:
  type : common
  displayName: OneAchievement
