    is: [fields]
    description: Get one achievement. 
    responses:
      200:
        body: 
          schema: !include schemas/achievement_schema.json
  put:    
    description: Update one achievement. 
    body:
      application/json: 
        schema: !include schemas/achievement_schema.json
  delete:
    description: Delete one achievement. 
  /segments:
