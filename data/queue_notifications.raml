displayName: Notifications
type: common
get:
  is: [ paginator, fields, ordering]
  description: Get notifications for a client.
  responses:
    200:
      body: 
        application/json:
          schema: !include schemas/notification_schema.json
          example: !include examples/queue/notification_list_example.json
/{notificationId}:
  displayName: Notification
  type: common
  get:
    description: Get notification for a client and set its status to IN_PROGRESS.
    responses:
      200:
        body: 
          application/json:
            schema: !include schemas/notification_schema.json
            example: !include examples/queue/notification_example.json
  patch:
    description: Patch one notification by id.
    body:
      application/json:
        schema: !include schemas/post_notification_schema.json
        example: !include examples/queue/notification_example.json
    responses:
      200:
        body: 
          application/json:
            schema: !include schemas/post_notification_schema.json
            example: !include examples/queue/notification_post_example.json
/error:
  displayName: ErrorNotifications
  type: common
  get:    
    is: [ paginator, fields, ordering]
    description: Get error notifications for a client.
    responses:
      200:
        body: 
          application/json:
            example: !include examples/queue/notification_list_example.json
            schema: !include schemas/notification_schema.json
  /{notificationId}:
    displayName: ErrorNotification
    type: common
    get:
      description: Get error notification for a client.
      responses:
        200:
          body: 
            application/json:
              schema: !include schemas/notification_schema.json
              example: !include examples/queue/notification_example.json
    patch:
      description: Update status for an error notification.
      body:
        application/json:
          schema: !include schemas/post_notification_schema.json
          example: !include examples/queue/notification_example.json
      responses:
        200:
          body:
            application/json: 
              schema: !include schemas/post_notification_schema.json
              example: !include examples/queue/notification_example.json