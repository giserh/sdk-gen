{
    "$schema": "http://json-schema.org/draft-03/schema",
    "type": "object",
    "description": "A representation of a user",
    "properties": {
        "status": {
            "default": "UNACTIVE",
            "required": false,
            "type": "string",
            "description": "current status",
            "allowed": {
                "1": "ACTIVE",
                "0": "UNACTIVE",
                "3": "BANNED",
                "2": "RESIGNED"
            }
        },
        "externalIds": {
            "required": false,
            "type": "id_array",
            "description": "ids to external entities like facebook"
        },
        "gender": {
            "default": "UNKNOWN",
            "required": false,
            "type": "string",
            "description": "gender of the person",
            "allowed": {
                "1": "MALE",
                "0": "UNKNOWN",
                "2": "FEMALE"
            }
        },
        "firstName": {
            "required": false,
            "type": "string",
            "description": "person's first name"
        },
        "gainedAchievements": {
            "required": false,
            "type": "id_array",
            "description": "a list of achievements that were gained by user or group"
        },
        "lastName": {
            "required": false,
            "type": "string",
            "description": "person's surname/last name"
        },
        "segments": {
            "required": false,
            "type": "id_array",
            "description": "id's the segments it belongs to"
        },
        "birthDate": {
            "required": false,
            "type": "string",
            "description": "date of birth represented as: month day, rrrr"
        },
        "password": {
            "required": true,
            "type": "string",
            "description": "password used for the account"
        },
        "counterValues": {
            "required": false,
            "type": "id_array",
            "description": "current values of the counter"
        },
        "role": {
            "required": false,
            "type": "string",
            "description": "current role"
        },
        "wonGames": {
            "required": false,
            "type": "id_array",
            "description": "a list of games that were won"
        },
        "customFields": {
            "required": false,
            "type": "array",
            "description": "custom key:value fields"
        },
        "usersGroups": {
            "required": false,
            "type": "id_array",
            "description": "ids of the user groups"
        },
        "friends": {
            "required": false,
            "type": "id_array",
            "description": "a list of friends"
        },
        "email": {
            "required": true,
            "type": "string",
            "description": "contact email represented as string",
            "constraint": "must be unique"
        }
    }
}