{
    "$schema": "http://json-schema.org/draft-03/schema",
    "type": "object",
    "description": "A representation of a user group",
    "properties": {
        "externalIds": {
            "required": false,
            "type": "id_array",
            "description": "ids to external entities like facebook"
        },
        "name": {
            "required": true,
            "type": "string",
            "description": "name used to describe the resource",
            "constraint": "unique"
        },
        "gainedAchievements": {
            "required": false,
            "type": "id_array",
            "description": "a list of achievements that were gained by user or group"
        },
        "wonGames": {
            "required": false,
            "type": "id_array",
            "description": "a list of games that were won"
        },
        "segments": {
            "required": false,
            "type": "id_array",
            "description": "id's the segments it belongs to"
        },
        "counterValues": {
            "required": false,
            "type": "id_array",
            "description": "current values of the counter"
        },
        "customFields": {
            "required": false,
            "type": "array",
            "description": "custom key:value fields"
        },
        "users": {
            "required": false,
            "type": "id_array",
            "description": "users ids"
        }
    }
}