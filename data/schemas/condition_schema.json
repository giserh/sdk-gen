{
    "$schema": "http://json-schema.org/draft-03/schema",
    "type": "object",
    "description": "A representation of a condition",
    "properties": {
        "function": {
            "required": false,
            "type": "long",
            "description": ""
        },
        "conditionType": {
            "default": "NORMAL",
            "required": false,
            "type": "string",
            "description": "",
            "allowed": {
                "1": "FUNCTION",
                "0": "NORMAL"
            }
        },
        "name": {
            "required": true,
            "type": "string",
            "description": "name used to describe the resource"
        },
        "rightSide": {
            "required": false,
            "type": "string",
            "description": ""
        },
        "leftSide": {
            "required": false,
            "type": "string",
            "description": ""
        },
        "operator": {
            "default": "EQ",
            "required": false,
            "type": "string",
            "description": "",
            "allowed": {
                "1": "NE",
                "0": "EQ",
                "3": "GTE",
                "2": "GT",
                "5": "LTE",
                "4": "LT"
            }
        },
        "functionArgs": {
            "required": false,
            "type": "string",
            "description": ""
        },
        "transactionSource": {
            "required": false,
            "type": "long",
            "description": "source of the current transaction"
        },
        "counters": {
            "required": false,
            "type": "id_array",
            "description": ""
        }
    }
}