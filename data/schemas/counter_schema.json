{
   "$schema":"http://json-schema.org/draft-03/schema",
   "description":"A representation of a counter",
   "type":"object",
   "properties":{
      "name":{
         "required":true,
         "type":"string"
      },
      "description":{
         "required":false,
         "type":"string"
      },
      "value":{
         "required":false,
         "type":"long",
         "default":"0"
      },
      "requirement":{
         "required":false,
         "type":"enum",
         "allowed":{
            "0":"ALL",
            "1":"ANY"
         },
         "default":"ANY"
      },
      "conditions":{
         "required":false,
         "type":"id_array"
      },
      "achievement":{
         "required":false,
         "type":"id"
      },
      "game":{
         "required":false,
         "type":"id"
      },
      "eventSettable":{
         "required":false,
         "type":"boolean",
         "constraint":"Allowed value true/false",
         "default":"false",
         "description":"This property determines if counter can be set by event"
      },
      "globalCounter":{
         "required":false,
         "type":"boolean",
         "default":"false"
      },
      "transactionSource":{
         "required":false,
         "type":"id"
      }
   }
}