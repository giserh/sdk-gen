{
    "$schema": "http://json-schema.org/draft-03/schema",
    "type": "object",
    "description": "A representation of a counter",
    "properties": {
        "requirement": {
            "default": "ANY",
            "required": false,
            "type": "enum",
            "description": "one requirement specs",
            "allowed": {
                "1": "ANY",
                "0": "ALL"
            }
        },
        "name": {
            "required": true,
            "type": "string",
            "description": "name used to describe the resource"
        },
        "achievement": {
            "required": false,
            "type": "id",
            "description": "id of the achievement"
        },
        "eventSettable": {
            "default": "false",
            "required": false,
            "type": "boolean",
            "description": "can it be set by an event",
            "constraint": "Allowed value true/false"
        },
        "value": {
            "default": "0",
            "required": false,
            "type": "long",
            "description": "numerical value"
        },
        "game": {
            "required": false,
            "type": "id",
            "description": "id of the game"
        },
        "globalCounter": {
            "default": "false",
            "required": false,
            "type": "boolean",
            "description": "if of the global counter"
        },
        "conditions": {
            "required": false,
            "type": "id_array",
            "description": "id of the connected conditions"
        },
        "transactionSource": {
            "required": false,
            "type": "id",
            "description": "source of the current transaction"
        },
        "description": {
            "required": false,
            "type": "string",
            "description": "string containing the entity's description"
        }
    }
}