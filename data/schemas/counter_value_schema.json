{
    "$schema": "http://json-schema.org/draft-03/schema",
    "type": "object",
    "description": "A representation of a counter value",
    "properties": {
        "counter": {
            "required": true,
            "type": "id",
            "description": "id of the counter"
        },
        "value": {
            "default": "1",
            "required": false,
            "type": "long",
            "description": "numerical value"
        }
    }
}