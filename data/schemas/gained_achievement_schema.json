{
    "$schema": "http://json-schema.org/draft-03/schema",
    "type": "object",
    "description": "A representation of a gained achievement",
    "properties": {
        "status": {
            "default": "INACTIVE",
            "required": false,
            "type": "string",
            "description": "current status",
            "allowed": {
                "1": "ACTIVE",
                "0": "INACTIVE",
                "2": "REVOKED"
            }
        },
        "origin": {
            "default": "AUTO",
            "required": false,
            "type": "string",
            "description": "origin of the object",
            "allowed": {
                "1": "MANUAL",
                "0": "AUTO"
            }
        },
        "amount": {
            "default": "1",
            "required": false,
            "type": "long",
            "description": ""
        },
        "achievement": {
            "required": true,
            "type": "id",
            "description": "id of the achievement"
        }
    }
}