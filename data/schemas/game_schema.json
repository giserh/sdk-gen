{
    "$schema": "http://json-schema.org/draft-03/schema",
    "type": "object",
    "description": "A representation of a game",
    "properties": {
        "name": {
            "required": true,
            "type": "string",
            "description": "name used to describe the resource"
        },
        "expression": {
            "required": true,
            "type": "string",
            "description": "logic expression"
        },
        "counter": {
            "required": false,
            "type": "id",
            "description": "id of the counter"
        },
        "gameType": {
            "default": "ONE_TIME",
            "required": false,
            "type": "string",
            "description": "type of the game",
            "allowed": {
                "1": "GRADUAL",
                "0": "ONE_TIME"
            }
        },
        "priority": {
            "default": "1",
            "required": false,
            "type": "int",
            "description": "priority of this object"
        },
        "notifications": {
            "required": false,
            "type": "id_array",
            "description": "id of the connected notifications"
        },
        "active": {
            "default": "false",
            "required": false,
            "type": "boolean",
            "description": "describes wheter it is active"
        },
        "conditions": {
            "required": false,
            "type": "id_array",
            "description": "id of the connected conditions"
        },
        "transactionSource": {
            "required": false,
            "type": "id",
            "description": "source of the current transaction"
        },
        "description": {
            "required": false,
            "type": "string",
            "description": "string containing the entity's description"
        }
    }
}