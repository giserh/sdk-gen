{
    "$schema": "http://json-schema.org/draft-03/schema",
    "type": "object",
    "description": "A representation of a segment",
    "properties": {
        "id": {
            "required": false,
            "type": "integer",
            "description": "object id"
        },
        "updatedAt": {
            "required": false,
            "type": "integer",
            "description": "time it was last updated"
        },
        "name": {
            "required": false,
            "type": "string",
            "description": "name used to describe the resource"
        },
        "createdAt": {
            "required": false,
            "type": "integer",
            "description": "time it was created"
        },
        "description": {
            "required": false,
            "type": "string",
            "description": "string containing the entity's description"
        }
    }
}