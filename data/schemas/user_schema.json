{
    "$schema": "http://json-schema.org/draft-03/schema",
    "type": "object",
    "description": "A representation of a user",
    "properties": {
        "status": {
            "required": false,
            "type": "string",
            "description": "current status"
        },
        "externalIds": {
            "items": {
                "type": "integer"
            },
            "required": false,
            "type": "array",
            "description": "ids to external entities like facebook"
        },
        "gender": {
            "required": false,
            "type": "string",
            "description": "gender of the person"
        },
        "firstName": {
            "required": false,
            "type": "string",
            "description": "person's first name"
        },
        "level": {
            "required": false,
            "type": "integer",
            "description": "number representing the current level"
        },
        "gainedAchievements": {
            "items": {
                "type": "object",
                "properties": {
                    "uat": "integer",
                    "o": "integer",
                    "st": "integer",
                    "amount": "integer",
                    "aid": "integer",
                    "cat": "integer"
                }
            },
            "required": false,
            "type": "array",
            "description": "a list of achievements that were gained by user or group"
        },
        "lastName": {
            "required": false,
            "type": "string",
            "description": "person's surname/last name"
        },
        "segments": {
            "items": {
                "type": "integer"
            },
            "required": false,
            "type": "array",
            "description": "id's the segments it belongs to"
        },
        "updatedAt": {
            "required": false,
            "type": "integer",
            "description": "time it was last updated"
        },
        "birthDate": {
            "required": false,
            "type": "string",
            "description": "date of birth represented as: month day, rrrr"
        },
        "email": {
            "required": false,
            "type": "string",
            "description": "contact email represented as string"
        },
        "counterValues": {
            "items": {
                "type": "object",
                "properties": {
                    "cid": "integer",
                    "v": "integer",
                    "uat": "integer",
                    "cat": "integer"
                }
            },
            "required": false,
            "type": "array",
            "description": "current values of the counter"
        },
        "role": {
            "required": false,
            "type": "string",
            "description": "current role"
        },
        "groups": {
            "items": {
                "type": "integer"
            },
            "required": false,
            "type": "array",
            "description": ""
        },
        "wonGames": {
            "items": {
                "type": "object",
                "properties": {
                    "gid": "integer",
                    "v": "integer",
                    "uat": "integer",
                    "cat": "integer"
                }
            },
            "required": false,
            "type": "array",
            "description": "a list of games that were won"
        },
        "password": {
            "required": false,
            "type": "string",
            "description": "password used for the account"
        },
        "friends": {
            "items": {
                "type": "integer"
            },
            "required": false,
            "type": "array",
            "description": "a list of friends"
        },
        "id": {
            "required": false,
            "type": "integer",
            "description": "object id"
        },
        "createdAt": {
            "required": false,
            "type": "integer",
            "description": "time it was created"
        }
    }
}